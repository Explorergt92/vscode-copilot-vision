{
	"name": "vscode-copilot-vision",
	"publisher": "Microsoft",
	"displayName": "VS Code Copilot Vision",
	"description": "Chat extension providing vision capabilities to Copilot, with a focus on accessibility.",
	"repository": {
		"type": "git",
		"url": "https://github.com/vscode/vscode-copilot-vision"
	},
	"icon": "assets/vision-eye-logo.png",
	"bugs": {
		"url": "https://github.com/microsoft/vscode-copilot-vision/issues"
	},
	"enabledApiProposals": [
		"chatReferenceBinaryData"
	],
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.94.0"
	},
	"categories": [
		"AI",
		"Chat",
		"Programming Languages",
		"Machine Learning"
	],
	"keywords": [
		"ai",
		"openai",
		"anthropic",
		"gemini",
		"claude",
		"vision",
		"accessibility",
		"images",
		"pilot",
		"co-pilot"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"contributes": {
		"configuration": {
			"properties": {
				"copilot.vision.provider": {
					"type": "string",
					"enum": [
						"OpenAI",
						"Anthropic",
						"Gemini"
					],
					"default": "OpenAI",
					"description": "The selected provider."
				},
			"copilot.vision.model": {
					"type": "string",
					"default": "gpt-4o",
					"description": "The model for the selected provider."
				}
			}
		},
		"chatParticipants": [
			{
				"id": "chat-sample.vision",
				"fullName": "Vision",
				"name": "vision",
				"description": "Attach an image to get started!",
				"isSticky": false,
				"commands": []
			}
		],
		"codeActions": [
			{
				"languages": [
					"markdown"
				],
				"actions": {
					"kind": "quickfix",
					"title": "Generate alt text",
					"description": "Generate alt text for image"
				}
			}
		],
		"codeLensProviders": [
			{
				"language": "markdown",
				"provider": "AltTextCodeLensProvider"
			}
		],
		"commands": [
			{
				"command": "copilot.vision.showHtmlPreview",
				"title": "Copilot Vision: Show HTML Preview"
			},
			{
				"command": "copilot.vision.selectProviderAndModel",
				"title": "Copilot Vision: Set a provider and model."
			},
			{
				"command": "troubleshootWithVision",
				"title": "Troubleshoot with Vision"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.29.0",
		"@azure/identity": "^4.4.1",
		"@google/generative-ai": "^0.21.0",
		"@vscode/prompt-tsx": "^0.2.11-alpha",
		"axios": "^1.7.7",
		"dotenv": "^16.4.5",
		"openai": "^4.67.3",
		"@azure/core-auth": "^1.8.0",
		"@azure/core-sse": "^2.1.3"
	},
	"devDependencies": {
		"@types/node": "^20.5.9",
		"@types/vscode": "1.94.0",
		"@typescript-eslint/eslint-plugin": "^7.14.0",
		"@typescript-eslint/parser": "^7.14.0",
		"eslint": "^8.26.0",
		"typescript": "^5.5.2"
	}
}
