{
	"name": "chat-sample",
	"publisher": "justin-dev",
	"displayName": "Copilot Chat Vision Sample",
	"description": "Chat extension that utilizes the Copilot Chat API to provide vision capabilities.",
	"repository": {
		"type": "git",
		"url": "https://github.com/justschen/copilot-chat-vision-sample"
	},
	"enabledApiProposals": [
		"chatReferenceBinaryData"
	],
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.94.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"contributes": {
		"configuration": {
			"properties": {
				"copilot.vision.provider": {
					"type": "string",
					"enum": [
						"OpenAI",
						"Anthropic",
						"Gemini"
					],
					"default": "OpenAI",
					"description": "The selected provider."
				},
				"copilot.vision.model": {
					"type": "string",
					"default": "gpt-4o",
					"description": "The model for the selected provider."
				}
			}
		},
		"chatParticipants": [
			{
				"id": "chat-sample.vision",
				"fullName": "Vision",
				"name": "vision",
				"description": "Attach an image to get started!",
				"isSticky": false,
				"commands": []
			}
		],
		"codeActions": [
			{
				"languages": [
					"markdown"
				],
				"actions": {
					"kind": "quickfix",
					"title": "Generate alt text",
					"description": "Generate alt text for image"
				}
			}
		],
		"codeLensProviders": [
			{
				"language": "markdown",
				"provider": "AltTextCodeLensProvider"
			}
		],
		"commands": [
			{
				"command": "copilot.vision.showHtmlPreview",
				"title": "Copilot Vision: Show HTML Preview"
			},
			{
				"command": "copilot.vision.selectProviderAndModel",
				"title": "Copilot Vision: Set a provider and model."
			},
			{
				"command": "troubleshootWithVision",
				"title": "Troubleshoot with Vision"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./",
		"test": "mocha -r ts-node/register src/**/*.test.ts"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.29.0",
		"@azure/core-auth": "^1.8.0",
		"@azure/core-sse": "^2.1.3",
		"@azure/identity": "^4.4.1",
		"@google/generative-ai": "^0.21.0",
		"@vscode/prompt-tsx": "^0.2.11-alpha",
		"axios": "^1.7.7",
		"dotenv": "^16.4.5",
		"openai": "^4.67.3"
	},
	"devDependencies": {
		"@types/chai": "^5.0.0",
		"@types/mocha": "^10.0.9",
		"@types/node": "^20.5.9",
		"@types/vscode": "1.94.0",
		"@typescript-eslint/eslint-plugin": "^7.14.0",
		"@typescript-eslint/parser": "^7.14.0",
		"chai": "^5.1.1",
		"eslint": "^8.26.0",
		"mocha": "^10.7.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	}
}
